<%- include('../partials/head', { pageTitle: 'Dungeon Master\'s Chamber' }) %>

<div class="page-header">
  <h1>Dungeon Master's Chamber</h1>
  <a href="/sessions/new" class="btn btn-primary">Post to Tavern Board</a>
</div>

<% if (sessions.length === 0) { %>
  <div class="card empty-state">
    <p>No quests have been posted yet. Create your first session to summon the party!</p>
  </div>
<% } else { %>
  <div class="session-grid">
    <% for (const s of sessions) { %>
      <a href="/sessions/<%= s.id %>" class="card session-card session-<%= s.status %>">
        <div class="session-status-badge"><%= s.status %></div>
        <h2><%= s.title %></h2>
        <% if (s.description) { %>
          <p class="session-desc"><%= s.description %></p>
        <% } %>
        <% if (s.status === 'confirmed' && s.confirmed_date) { %>
          <div class="session-confirmed-date">
            <%= new Date(s.confirmed_date).toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric' }) %>
            at <%= new Date(s.confirmed_date).toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' }) %>
            <% if (s.confirmed_label) { %> &mdash; <%= s.confirmed_label %><% } %>
          </div>
        <% } %>
        <div class="session-meta">Created <%= new Date(s.created_at).toLocaleDateString() %></div>
      </a>
    <% } %>
  </div>
<% } %>

<%- include('../partials/foot') %>

<!DOCTYPE html>
<html lang="en" data-theme="<%= (typeof user !== 'undefined' && user && user.theme === 'light') ? 'light' : (typeof user !== 'undefined' && user && user.theme === 'auto') ? 'auto' : 'dark' %>" data-raw-theme="<%= (typeof user !== 'undefined' && user && user.theme) ? user.theme : 'dark' %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quest Planner<%= typeof pageTitle !== 'undefined' ? ' - ' + pageTitle : '' %></title>
  <script>
    (function() {
      var raw = document.documentElement.getAttribute('data-raw-theme');
      if (raw === 'auto') {
        var h = new Date().getHours();
        document.documentElement.setAttribute('data-theme', (h >= 6 && h < 19) ? 'light' : 'dark');
      }
    })();
  </script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=MedievalSharp&family=Crimson+Text:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css?v=<%= appVersion %>">
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="manifest" href="/manifest.json">
  <meta name="theme-color" content="#d4a843">
  <link rel="apple-touch-icon" href="/icons/icon-192.png">

  <!-- Open Graph / Social Media Meta Tags -->
  <%
    var baseUrl = (typeof protocol !== 'undefined' ? protocol : 'http') + '://' + (typeof host !== 'undefined' ? host : 'localhost:3000');
    var ogTitle = (typeof sessionForOG !== 'undefined' && sessionForOG)
      ? sessionForOG.title + ' - Quest Planner'
      : 'Quest Planner - D&D Session Scheduling';
    var ogDescription = (typeof sessionForOG !== 'undefined' && sessionForOG)
      ? 'Vote for date and time for the next session: ' + (sessionForOG.description || sessionForOG.title)
      : 'Schedule your next D&D adventure with Quest Planner';
    var ogUrl = (typeof sessionForOG !== 'undefined' && sessionForOG)
      ? baseUrl + '/sessions/' + sessionForOG.id
      : baseUrl;
  %>
  <meta property="og:type" content="website">
  <meta property="og:site_name" content="Quest Planner">
  <meta property="og:title" content="<%= ogTitle %>">
  <meta property="og:description" content="<%= ogDescription %>">
  <meta property="og:image" content="<%= baseUrl %>/icons/icon-512.png">
  <meta property="og:image:width" content="512">
  <meta property="og:image:height" content="512">
  <% if (typeof sessionForOG !== 'undefined' && sessionForOG) { %>
    <meta property="og:url" content="<%= ogUrl %>">
  <% } %>

  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="<%= ogTitle %>">
  <meta name="twitter:description" content="<%= ogDescription %>">
  <meta name="twitter:image" content="<%= baseUrl %>/icons/icon-512.png">
  <script>
    // Only register service worker in production (not on localhost)
    if ('serviceWorker' in navigator && !window.location.hostname.match(/localhost|127\.0\.0\.1/)) {
      navigator.serviceWorker.register('/sw.js?v=<%= appVersion %>');
    }
  </script>
  <% if (typeof user !== 'undefined' && user && typeof allUsernames !== 'undefined') { %>
    <script>window.__allUsers = <%- JSON.stringify(allUsernames) %>;</script>
  <% } %>
</head>
<body>
  <%- include('embers') %>
  <%- include('nav') %>
  <main class="container">
    <%- include('flash') %>

<nav class="nav">
  <div class="nav-inner container">
    <a href="/" class="nav-brand">Quest Planner</a>
    <% if (user) { %>
      <div class="nav-links">
        <a href="/board" class="nav-link">Bulletin Board</a>
        <span class="nav-user">
          <% if (user.avatar) { %>
            <img src="/avatars/<%= user.avatar %>" alt="" class="avatar-tiny">
          <% } else { %>
            <span class="avatar-letter"><%= user.username.charAt(0).toUpperCase() %></span>
          <% } %>
          <%= user.username %> (<%= user.role === 'admin' ? 'Guild Master' : user.role === 'dm' ? 'Dungeon Master' : 'Adventurer' %>)
        </span>
        <a href="/settings" class="nav-settings-icon" title="Settings">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 20h9"></path>
            <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path>
          </svg>
        </a>
        <% if (user.role === 'admin') { %>
          <a href="/admin/users" class="nav-settings-icon" title="Guild Settings">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="3"></circle>
              <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1-2.83 2.83l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83-2.83l.06-.06A1.65 1.65 0 0 0 4.68 15a1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1 0-4h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 2.83-2.83l.06.06A1.65 1.65 0 0 0 9 4.68a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 4 0v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 2.83l-.06.06A1.65 1.65 0 0 0 19.4 9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 0 4h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
            </svg>
          </a>
        <% } %>
        <span id="nav-clock" class="nav-clock"></span>
        <form action="/logout" method="POST" class="inline-form">
          <button type="submit" class="btn btn-small btn-outline">Leave Tavern</button>
        </form>
      </div>
      <script>window.__timeFormat = '<%= user.time_format || "24h" %>';</script>
    <% } %>
  </div>
</nav>

# Server Configuration
PORT=3000
NODE_ENV=production

# Session Security (REQUIRED - change to a random string)
SESSION_SECRET=change-me-to-a-random-string-at-least-32-characters

# Production Settings (Railway/Render/Fly.io)
TRUST_PROXY=true
SECURE_COOKIES=true

# Optional: Google OAuth (leave empty to disable)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GOOGLE_CALLBACK_URL=https://yourdomain.com/auth/google/callback

# Optional: Web Push Notifications (leave empty to disable)
# VAPID_PUBLIC_KEY=your-vapid-public-key
# VAPID_PRIVATE_KEY=your-vapid-private-key
# VAPID_SUBJECT=mailto:your-email@example.com
